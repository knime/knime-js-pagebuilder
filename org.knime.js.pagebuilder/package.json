{
  "name": "knime-pagebuilder",
  "version": "1.0.0",
  "description": "PageBuilder for KNIMEÂ® Analytics Platform & Data Apps",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build:*",
    "build:app": "vite build",
    "build:lib": "vite build --mode lib",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "run-p 'lint:* -- --fix'",
    "lint:js": "eslint . --cache --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "lint:css": "stylelint --cache '**/*.{css,vue}'",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "ci:lint-format": "run-p ci:lint:* format:check -c",
    "ci:lint:js": "npm run lint:js && npm run lint:js -- -f json -o test-results/eslint.json",
    "ci:lint:css": "npm run lint:css -- -f json -o test-results/stylelint.json",
    "jenkins:lint": "eslint --ext .js,.vue -f json -o target/eslint.json || true; stylelint '**/*.{css,vue}' -f json -o target/stylelint.json || true",
    "audit": "npm audit --omit dev",
    "test:unit": "TZ='Europe/Berlin' vitest",
    "coverage": "TZ='Europe/Berlin' vitest --coverage",
    "_TODO_opensourcecredits": "npm run --prefix webapps-common/ opensourcecredits",
    "_TODO_build:credits": "npm run opensourcecredits && vue-cli-service build --target lib --formats umd-min --name knime-pagebuilder-credits src/components/PageBuilderCredits.vue",
    "prepare": "cd .. && husky ./org.knime.js.pagebuilder/.husky",
    "sbom": "npx @cyclonedx/cyclonedx-npm --output-file bom.json --ignore-npm-errors --omit dev"
  },
  "license": "UNLICENSED",
  "author": "KNIME AG, Zurich, Switzerland",
  "dependencies": {
    "@knime/ui-extension-service": "0.28.0",
    "consola": "2.15.3",
    "date-fns": "2.30.0",
    "date-fns-tz": "2.0.0",
    "iframe-resizer": "4.3.9",
    "mime": "4.0.1",
    "vue": "3.4.21",
    "vue-slider-component": "4.1.0-beta.7",
    "vuex": "4.1.0",
    "webapps-common": "file:webapps-common"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "1.16.1",
    "@knime/eslint-config": "8.0.11",
    "@tsconfig/node20": "20.1.2",
    "@types/node": "20.11.30",
    "@vitejs/plugin-vue": "5.0.4",
    "@vitest/coverage-v8": "1.4.0",
    "@vue/tsconfig": "0.5.1",
    "eslint": "8.57.0",
    "flush-promises": "1.0.2",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "npm-run-all": "4.1.5",
    "postcss-import": "16.0.1",
    "postcss-preset-env": "9.5.2",
    "postcss-url": "10.1.3",
    "prettier": "3.2.5",
    "stylelint": "16.2.1",
    "typescript": "5.3.3",
    "vite": "5.2.2",
    "vite-plugin-css-injected-by-js": "3.5.0",
    "vite-svg-loader": "5.1.0",
    "vitest": "1.4.0",
    "vue-tsc": "1.8.27"
  },
  "engines": {
    "node": "20.x"
  },
  "volta": {
    "node": "20.11.1"
  }
}
