{
  "name": "knime-pagebuilder",
  "version": "1.0.0",
  "description": "PageBuilder for KNIMEÂ® Analytics Platform & Data Apps",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build:*",
    "build:app": "vite build",
    "build:lib": "vite build --mode lib",
    "type-check": "vue-tsc --noEmit",
    "lint": "run-p 'lint:* -- --fix'",
    "lint:js": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.json",
    "lint:css": "stylelint '**/*.{css,vue}'",
    "ci:lint": "run-p lint:*",
    "jenkins:lint": "eslint --ext .js,.vue,.json -f json -o target/eslint.json || true; stylelint '**/*.{css,vue}' -f json -o target/stylelint.json || true",
    "audit": "npm audit --omit dev",
    "_TODO_test:unit": "TZ='Europe/Berlin' vue-cli-service test:unit",
    "_TODO_coverage": "TZ='Europe/Berlin' vue-cli-service test:unit --coverage || true",
    "_TODO_opensourcecredits": "npm run --prefix webapps-common/ opensourcecredits",
    "_TODO_build:credits": "npm run opensourcecredits && vue-cli-service build --target lib --formats umd-min --name knime-pagebuilder-credits src/components/PageBuilderCredits.vue"
  },
  "license": "UNLICENSED",
  "author": "KNIME AG, Zurich, Switzerland",
  "dependencies": {
    "@knime/ui-extension-service": "0.5.0",
    "consola": "2.15.3",
    "iframe-resizer": "4.2.10",
    "mime": "3.0.0",
    "vue": "3.2.47",
    "vue-slider-component": "4.1.0-beta.2",
    "vuex": "4.1.0",
    "webapps-common": "file:webapps-common"
  },
  "devDependencies": {
    "@knime/eslint-config": "7.1.3",
    "@types/node": "18.14.2",
    "@vitejs/plugin-vue": "4.0.0",
    "@vue/tsconfig": "0.1.3",
    "eslint": "8.35.0",
    "npm-run-all": "4.1.5",
    "postcss-import": "15.1.0",
    "postcss-preset-env": "8.0.1",
    "postcss-url": "10.1.3",
    "stylelint": "15.2.0",
    "typescript": "4.9.5",
    "vite": "4.1.4",
    "vite-plugin-css-injected-by-js": "3.0.1",
    "vite-svg-loader": "4.0.0",
    "vue-tsc": "1.2.0"
  },
  "engines": {
    "node": "18.x"
  },
  "volta": {
    "node": "18.14.2"
  }
}
