{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "webapps-common/svg.d.ts", // for supporting SVG component imports; order is important
    "webapps-common/ui/globals.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"],
      "vue-slider-component": ["./src/vue-slider-component.d.ts"]
    },
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
